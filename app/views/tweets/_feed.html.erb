<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is 64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png" alt="bulma image">
      </p>
    </figure>
    <div class="media-content">
      <%= render "tweets/form" %>
    </div>
  </article>

<% @tweets.each do | tweet | %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png" alt="bulma image">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong>Nick Garver</strong>
          <small>@internetboy</small>
          <p><%= tweet.tweet %></p>
        </div>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to tweet, class: "level-item" do %>
                <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to edit_tweet_path(tweet), class: "level-item" do %>
              <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to tweet, method: :delete, data: {confirm: "delete this tweet?"
              } do %>
                <span class="icon"><i class="fa fa-trash" aria-hidden="true"></i></span>
            <% end %>
          </div>
        </nav>
      </div>
    </article>
  </div>
<% end %>
</div>
